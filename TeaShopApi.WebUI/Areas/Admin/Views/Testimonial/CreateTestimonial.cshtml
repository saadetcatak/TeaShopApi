@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Yeni Referans Girişi</h1>

<form method="post">
    <label>İsim</label>
    <input type="text" class="form-control" asp-for="TestimonialName" />
    <br />
    <label>Yorum</label>
    <input type="text" class="form-control" asp-for="TestimonialComment" />
    <br />
    <label>Resim</label>
    <input type="text" class="form-control" asp-for="TestimonialImageUrl" />
    <br />
    <button class="btn btn-primary">Referans Ekle</button>
</form>
