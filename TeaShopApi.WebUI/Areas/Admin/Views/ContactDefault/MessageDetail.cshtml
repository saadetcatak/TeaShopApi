@model ResultContactDefaultDto

@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        table {
            width: 100%; 
            height:100%; /* Tablonun genişliğini belirle */
            border-collapse: collapse; /* Hücre sınırlarını birleştir */
            background-size: cover; /* Resmi kaplamak için boyutu ayarla */
            color: black; /* Yazı rengini beyaz yap (isteğe bağlı) */
        }

        th, td {
            text-align: left; 
            border: 1px solid black; 
            color:black;
        }

       
    </style>

</head>
 <body>
   
    <br />
    <table class="table table-bordered">
        <tr>
            <th>Ad Soyad :</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th class="table-success">Email :</th>
            <td class="table-success">@Model.Email</td>
        </tr>
        <tr>
            <th>Konu :</th>
            <td>@Model.Subject</td>
        </tr>
        <tr>
            <th class="table-success">Mesaj :</th>
            <td class="table-success">@Model.Message</td>
        </tr>
    </table>

</body>
</html>