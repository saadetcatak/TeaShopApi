@model UpdateDrinkDto
@{
    ViewData["Title"] = "UpdateDrink";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>İçecek Güncelleme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="drinkID" />
    <br />
    <label>İçecek Adı</label>
    <input type="text" class="form-control" asp-for="drinkName" />
    <br />
    <label>İçecek Fiyatı</label>
    <input type="text" class="form-control" asp-for="drinkPrice" />
    <br />
    <label>İçecek Resmi</label>
    <input type="text" class="form-control" asp-for="drinkImageUrl" />
    <br />
    <button class="btn btn-success">İçeceği Güncelle</button>
</form>
