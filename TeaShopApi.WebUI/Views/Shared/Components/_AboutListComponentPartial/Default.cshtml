@model List<TeaShopApi.WebUI.Dtos.AboutDtos.ResultAboutDto>




<div class="about_section layout_padding">
    <div id="my_main_slider" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="container">
                    @foreach (var item in Model)
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <div class="about_main">
                                    <h1 class="about_taital">Hakkımızda</h1>
                                    <p class="about_text">
                                        @item.Description
                                    </p>
                                    <div class="readmore_bt"><a href="#">Daha Fazla</a></div>
                                </div>
                            </div>
                            <div class="col-md-6 ">
                                <div class="image_2"><img src="@item.ImageUrl" style="border-radius: 50%; "></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
