
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<body>
    <div class="banner_section layout_padding">
        <div id="main_slider" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6">
                                <h1 class="banner_taital">Test of <span style="color: #f3801f;">Tea</span></h1>
                            </div>
                            <div class="col-md-6">
                                <div><img src="images/img-1.png" class="image_1"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6">
                                <h1 class="banner_taital">Test of <span style="color: #f3801f;">Tea</span></h1>
                            </div>
                            <div class="col-md-6">
                                <div><img src="images/img-1.png" class="image_1"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6">
                                <h1 class="banner_taital">Test of <span style="color: #f3801f;">Tea</span></h1>
                            </div>
                            <div class="col-md-6">
                                <div><img src="images/img-1.png" class="image_1"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#main_slider" role="button" data-slide="next">
                <i class="fa fa-angle-left"></i>
            </a>
            <a class="carousel-control-next" href="#main_slider" role="button" data-slide="next">
                <i class="fa fa-angle-right"></i>
            </a>
        </div>
    </div>
    @await Component.InvokeAsync("_AboutListComponentPartial")
    <!-- about section end -->
    <!-- booking section start -->
    <div class="booking_section">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1 class="booking_taital">Şimdi Rezervasyon Yap</h1>
                    <p class="booking_text">Uzun zamandır bilinen bir gerçektir ki en iyi lezzet bizde.</p>
                </div>
                <div class="col-md-6">
                    <div class="booking_bt"><a href="#">Rezervasyon Yap!</a></div>
                </div>
            </div>
        </div>
    </div>
    <!-- booking section end -->
    <!-- services section start -->
    @await Component.InvokeAsync("_DrinkListComponentPartial")
    <!-- services section end -->
    <!-- choose section start -->
    @await Html.PartialAsync("~/Views/Default/_WhyChoosePartial.cshtml")
    <!-- choose section end -->
    <!-- shop section start -->
    @await Html.PartialAsync("~/Views/Default/_OurTeaShopPartial.cshtml")
    <!-- shop section end -->
    <!-- frequently section start -->
    @await Component.InvokeAsync("_QuestionListComponentPartial")
    <!-- frequently section end -->
    <!-- clients section start -->
    @await Component.InvokeAsync("_TestimonialListComponentPartial")
    <!-- clients section end -->
    <!-- contact section start -->
    @await Component.InvokeAsync("_ContactDefaultComponentPartial")

</body>

</html>

